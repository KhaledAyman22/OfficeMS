<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type GridViewColumnHeader}" x:Key="ColumnHeaderTheme">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type GridViewColumnHeader}">
                    <Border BorderThickness="0,0,0,1" BorderBrush="#ee6d4f" Background="Transparent">
                        <TextBlock x:Name="ContentHeader" Text="{TemplateBinding Content}" Padding="5,5,5,0" Width="{TemplateBinding Width}" TextAlignment="Left"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Foreground" Value="#e0fbfc" />
        <Setter Property="FontFamily" Value="/Fonts/#Tajawal" />
        <Setter Property="FontSize" Value="21" />
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="Padding" Value="3,0,3,0"/>
    </Style>
</ResourceDictionary>